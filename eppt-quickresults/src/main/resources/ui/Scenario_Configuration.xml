<panel id="ScenarioConfiguration" name="ScenarioConfiguration" layout="BorderLayout">
	<panel id="ss" resizeable="false" border="TitledBorder(Scenarios)" constraints="BorderLayout.NORTH"
		   layout="BorderLayout">
		<panel constraints="BorderLayout.NORTH" layout="FlowLayout(FlowLayout.LEFT)">
			<button id="btnAddScenario" name="btnAddScenario" text="Add" ActionCommand="btnAddScenario"/>
			<button id="btnDelScenario" name="btnDelScenario" text="Delete" ActionCommand="btnDelScenario"/>
			<button id="btnClearScenario" name="btnClearScenario" text="Clear All"
					ActionCommand="btnClearScenario"/>
			<glue minimumsize="30,0"/>
		</panel>
		<scrollpane name="spsl" id="spsl" constraints="BorderLayout.CENTER" minimumsize="410,90" preferredsize="410,90">
			<list id="SelectedList" name="SelectedList">
			</list>
		</scrollpane>
		<panel constraints="BorderLayout.SOUTH" layout="FlowLayout(FlowLayout.LEFT)">
			<label text=" "/>
			<buttongroup>
				<radiobutton name="rdbp000" id="rdbp000" text="Base" selected="true">
				</radiobutton>
				<radiobutton name="rdbp001" id="rdbp001" text="Comparison" enabled="false">
				</radiobutton>
				<radiobutton name="rdbp002" id="rdbp002" text="Difference" enabled="false">
				</radiobutton>
			</buttongroup>
		</panel>
	</panel>
	<panel id="Display" resizeable="false" border="TitledBorder(Display)" constraints="BorderLayout.CENTER"
		   layout="FlowLayout(FlowLayout.LEFT)"
		   preferredsize="440,502"
		   minimumsize="440,502">
		<panel layout="GridBagLayout">
			<label text="Month">
				<gridbagconstraints insets="0,5,5,0" anchor="GridBagConstraints.NORTHWEST" gridx="1" gridy="0"/>
			</label>
			<label text="Year">
				<gridbagconstraints insets="0,5,5,0" anchor="GridBagConstraints.WEST" gridx="2" gridy="0"/>
			</label>
			<label text="Start:">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="1"/>
			</label>
			<spinner id="spnStartMonth" name="spnStartMonth" preferredsize="75,25" minimumsize="50,20">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="1" gridy="1"/>
			</spinner>
			<spinner id="spnStartYear" name="spnStartYear" preferredsize="75,25" minimumsize="50,20">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="2" gridy="1"/>
			</spinner>
			<label text="End:">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="2"/>
			</label>
			<spinner id="spnEndMonth" name="spnEndMonth" preferredsize="75,25" minimumsize="50,20">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="1" gridy="2"/>
			</spinner>
			<spinner id="spnEndYear" name="spnEndYear" preferredsize="75,25" minimumsize="50,20">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="2" gridy="2"/>
			</spinner>
			<hbox visible="true">
				<gridbagconstraints insets="5,0,5,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="3"
									gridwidth="3"/>
				<label text="Display Units for Flows: "/>
				<buttongroup id="rep4">
					<radiobutton id="rdbCFS" name="rdbCFS" text="CFS"/>
					<radiobutton id="rdbTAF" name="rdbTAF" text="TAF" selected="true"/>
				</buttongroup>
			</hbox>
			<hbox visible="false">
				<gridbagconstraints insets="5,0,5,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="3"
									gridwidth="3"/>
				<label text="Display: "/>
				<buttongroup id="rep4pg">
					<radiobutton id="rdbEnergy" name="rdbEnergy" text="Energy" selected="true"/>
					<radiobutton id="rdbCap" name="rdbCap" text="Capacity"/>
					<radiobutton id="rdbCapp" name="rdbCapp" text="Capacity (On-Peak)"/>
					<radiobutton id="rdbCapo" name="rdbCap0" text="Capacity (Off-Peak)"/>
				</buttongroup>
			</hbox>
			<checkbox name="RepckbTimeSeriesPlot" id="RepckbTimeSeriesPlot" text="Time series plot" selected="true">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="4"
									gridwidth="2"/>
			</checkbox>
			<checkbox name="RepckbBAWPlot" id="RepckbBAWPlot" enabled="true" text="Box and whiskers plot">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="2" gridy="4"
									gridwidth="1"/>
			</checkbox>
			<checkbox name="RepckbExceedancePlot" id="RepckbExceedancePlot" text="Exceedance plot" selected="true"
					  visible="false">
				<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="0" gridy="5"
									gridwidth="2"/>
			</checkbox>
			<panel id="controls2" resizeable="true" border="TitledBorder(Exceedance Plots)" layout="GridBagLayout" enabled="true">
				<gridbagconstraints insets="0,0,0,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="6"
									gridwidth="3"/>
				<checkbox name="RepchkMonOct" id="RepchkMonOct" text="Oct" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,5,0,0" anchor="GridBagConstraints.WEST" gridx="1" gridy="0"/>
				</checkbox>
				<checkbox name="RepchkMonNov" id="RepchkMonNov" text="Nov" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="2" gridy="0"/>
				</checkbox>
				<checkbox name="RepchkMonDec" id="RepchkMonDec" text="Dec" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="3" gridy="0"/>
				</checkbox>
				<checkbox name="RepchkMonJan" id="RepchkMonJan" text="Jan" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="4" gridy="0"/>
				</checkbox>
				<checkbox name="RepchkMonFeb" id="RepchkMonFeb" text="Feb" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="5" gridy="0"/>
				</checkbox>
				<checkbox name="RepchkMonMar" id="RepchkMonMar" text="Mar" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="6" gridy="0"/>
				</checkbox>
				<checkbox name="RepchkMonApr" id="RepchkMonApr" text="Apr" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,5,0,0" anchor="GridBagConstraints.WEST" gridx="1" gridy="1"/>
				</checkbox>
				<checkbox name="RepchkMonMay" id="RepchkMonMay" text="May" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="2" gridy="1"/>
				</checkbox>
				<checkbox name="RepchkMonJun" id="RepchkMonJun" text="Jun" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="3" gridy="1"/>
				</checkbox>
				<checkbox name="RepchkMonJul" id="RepchkMonJul" text="Jul" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="4" gridy="1"/>
				</checkbox>
				<checkbox name="RepchkMonAug" id="RepchkMonAug" text="Aug" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="5" gridy="1"/>
				</checkbox>
				<checkbox name="RepchkMonSep" id="RepchkMonSep" text="Sep" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="6" gridy="1"/>
				</checkbox>
				<checkbox text="ALL" name="RepchkMonALL" id="RepchkMonALL" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,5,0,0" anchor="GridBagConstraints.WEST" gridx="1" gridy="2"
										gridwidth="1"/>
				</checkbox>
				<checkbox text="Annual Flow" name="RepchkMonAnnual" id="RepchkMonAnnual" font="Tahoma-Normal-11"
						  enabled="true">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="2" gridy="2"
										gridwidth="2"/>
				</checkbox>
				<button name="RepbtnAllMonths" text="All months" font="Tahoma-Normal-11" enabled="true" visible="false"
						ActionCommand="Rep_AllMonths">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="3" gridy="2"
										gridwidth="2"/>
				</button>
				<button name="RepbtnClearMonths" text="Clear Checked" font="Tahoma-Normal-11" enabled="true"
						ActionCommand="Rep_ClearMonths">
					<gridbagconstraints insets="0,0,0,0" anchor="GridBagConstraints.WEST" gridx="5" gridy="2"
										gridwidth="2"/>
				</button>
			</panel>
			<checkbox id="RepckbMonthlyTable" name="RepckbMonthlyTable" text="Monthly table">
				<gridbagconstraints insets="10,0,0,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="7"
									gridwidth="2"/>
			</checkbox>
			<checkbox name="RepckbSummaryTable" id="RepckbSummaryTable" text="Summary table" selected="true">
				<gridbagconstraints insets="10,0,0,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="8"
									gridwidth="2"/>
			</checkbox>
			<panel id="controls3" border="TitledBorder" resizeable="true" layout="GridBagLayout" enabled="true">
				<gridbagconstraints insets="0,0,5,3" anchor="GridBagConstraints.WEST" gridx="0" gridy="9"
									gridwidth="3"/>

				<label text="Statistic" font="Tahoma-Bold-10">
					<gridbagconstraints insets="0,10,0,0" gridx="0" gridy="0" anchor="GridBagConstraints.WEST"/>
				</label>
				<checkbox id="rdbStat1" name="rdbStat1" text="Avg" font="Tahoma-Normal-11" enabled="true"
						  selected="true">
					<gridbagconstraints insets="0,5,0,3" gridx="0" gridy="1" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbStat2" name="rdbStat2" text="Max" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,5,0,3" gridx="0" gridy="2" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbStat3" name="rdbStat3" text="Min" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,5,0,3" gridx="0" gridy="3" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbStat4" name="rdbStat4" text="StdDev" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,5,0,3" gridx="0" gridy="4" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbStat5" name="rdbStat5" text="Median" font="Tahoma-Normal-11" enabled="truee">
					<gridbagconstraints insets="0,5,0,3" gridx="0" gridy="5" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<label text="Water year type" font="Tahoma-Bold-10">
					<gridbagconstraints insets="0,5,0,0" gridx="2" gridy="0" anchor="GridBagConstraints.WEST"/>
				</label>
				<checkbox id="rdbWYType1" name="rdbWYType1" text="Sac 40-30-30" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,3" gridx="2" gridy="1" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbWYType2" name="rdbWYType2" text="Shasta Index" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,3" gridx="2" gridy="2" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbWYType3" name="rdbWYType3" text="Feather Index" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,3" gridx="2" gridy="3" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbWYType4" name="rdbWYType4" text="SJR Index" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints insets="0,0,0,3" gridx="2" gridy="4" anchor="GridBagConstraints.WEST"/>
				</checkbox>


				<label text="Period" font="Tahoma-Bold-10">
					<gridbagconstraints insets="0,5,0,0" gridx="3" gridy="0" anchor="GridBagConstraints.WEST"/>
				</label>
				<checkbox id="rdbPeriod1" name="rdbPeriod1" text="All years" font="Tahoma-Normal-11" enabled="true"
						  selected="true">
					<gridbagconstraints gridx="3" gridy="1" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbPeriod2" name="rdbPeriod2" text="Dry (1928-1934)" font="Tahoma-Normal-11"
						  enabled="true">
					<gridbagconstraints gridx="3" gridy="2" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbPeriod3" name="rdbPeriod3" text="Dry (1976-1977)" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints gridx="3" gridy="3" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbPeriod4" name="rdbPeriod4" text="Dry (1986-1992)" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints gridx="3" gridy="4" anchor="GridBagConstraints.WEST"/>
				</checkbox>
				<checkbox id="rdbPeriod5" name="rdbPeriod5" text="All dry periods" font="Tahoma-Normal-11" enabled="true">
					<gridbagconstraints gridx="3" gridy="5" anchor="GridBagConstraints.WEST"/>
				</checkbox>
			</panel>
			<hbox>
				<gridbagconstraints anchor="GridBagConstraints.WEST" gridx="0" gridy="10" gridwidth="2" insets="0,0,0,0"/>
				<button text="Help" id="QuickHelp" ActionCommand="AC_Help"/>
			</hbox>
		</panel>
	</panel>
</panel>